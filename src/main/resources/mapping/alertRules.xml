<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.carryit.base.fam.dao.AlertRulesDao">
    <resultMap type="com.carryit.base.fam.bean.AlertRules" id="AlertRules">
        <!-- column:库表的字段名 property:实体类里的属性名 -->
        <id column="id" property="id"/>
        <result column="ruleId" property="ruleId"/>
        <result column="appEui" property="appEui"/>
        <result column="devEui" property="devEui"/>
        <result column="ruleContent" property="ruleContent"/>
        <result column="changeTime" property="changeTime"/>
        <result column="createTime" property="createTime"/>
    </resultMap>


    <select id="queryAlertRulesByRuleId" parameterType="com.carryit.base.fam.bean.AlertRules"
            resultMap="AlertRules">
        select id,ruleId,appEui,devEui,ruleContent,changeTime,createTime from alertrules where  ruleId=#{ruleId}
    </select>

    <select id="queryAlertRulesByAppEui" parameterType="com.carryit.base.fam.bean.AlertRules"
            resultMap="AlertRules">
        select id,ruleId,appEui,devEui,ruleContent,changeTime,createTime from alertrules where  appEui=#{appEui}
    </select>

    <insert id="addAlertRules" parameterType="com.carryit.base.fam.bean.AlertRules"
            useGeneratedKeys="true" keyProperty="id">
        insert into alertrules(ruleId,appEui,devEui,ruleContent)
        values(#{ruleId},#{appEui},#{devEui},#{ruleContent})
    </insert>

    <update id="updateAlertRules" parameterType="com.carryit.base.fam.bean.AlertRules">
        update alertrules set appEui=#{appEui},devEui=#{devEui},ruleContent=#{ruleContent},changeTime=#{changeTime}
        where ruleId=#{ruleId}
    </update>

    <delete id="deleteAlertRules" parameterType="com.carryit.base.fam.bean.AlertRules">
        delete from alertrules where ruleId=#{ruleId}
    </delete>

</mapper>