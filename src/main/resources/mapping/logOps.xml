<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.carryit.base.fam.dao.LogOpsDao">
    <resultMap type="com.carryit.base.fam.bean.LogOps" id="LogOps">
        <!-- column:库表的字段名 property:实体类里的属性名 -->
        <id column="id" property="id"/>
        <result column="userId" property="userId"/>
        <result column="logContent" property="logContent"/>
        <result column="createTime" property="createTime"/>
    </resultMap>

    <select id="queryAllLogOps"
            resultMap="LogOps">
        select id,userId,logContent,createTime from logops
    </select>

    <select id="queryLogOpsByUid" parameterType="com.carryit.base.fam.bean.LogOps"
            resultMap="LogOps">
        select id,userId,logContent,createTime from logops where userId=#{userId}
    </select>

    <insert id="addLogOps" parameterType="com.carryit.base.fam.bean.LogOps"
            useGeneratedKeys="true" keyProperty="id">
        insert into logops(userId,logContent)
        values(#{userId},#{logContent})
    </insert>

</mapper>