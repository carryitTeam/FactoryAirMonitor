<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.carryit.base.fam.dao.AlarmDao">
    <resultMap type="com.carryit.base.fam.bean.Alarm" id="Alarm">
        <!-- column:库表的字段名 property:实体类里的属性名 -->
        <id column="id" property="id"/>
        <result column="devEui" property="devEui"/>
        <result column="level" property="level"/>
        <result column="devEuiRelate" property="devEuiRelate"/>
        <result column="relateNames" property="relateNames"/>
        <result column="status" property="status"/>
        <result column="changeTime" property="changeTime"/>
        <result column="createTime" property="createTime"/>
    </resultMap>

    <select id="queryByDevEui" parameterType="com.carryit.base.fam.bean.Alarm"
            resultMap="Alarm">
        select id,devEui,level,devEuiRelate,relateNames,status,changeTime,createTime from alarm where devEui=#{devEui}
    </select>

    <select id="queryAll" parameterType="com.carryit.base.fam.bean.Alarm"
            resultMap="Alarm">
        select id,devEui,level,devEuiRelate,relateNames,status,changeTime,createTime from alarm
    </select>

    <insert id="addAlarm" parameterType="com.carryit.base.fam.bean.Alarm"
            useGeneratedKeys="true" keyProperty="id">
        insert into alarm(devEui,level,devEuiRelate,relateNames,status)
        values(#{devEui},#{level},#{devEuiRelate},#{relateNames},#{status})
    </insert>

    <update id="updateAlarm" parameterType="com.carryit.base.fam.bean.Alarm">
        update alarm set devEui=#{devEui},level=#{level},devEuiRelate=#{devEuiRelate},relateNames=#{relateNames},status=#{status},changeTime=#{changeTime}
        where alarmId=#{alarmId}
    </update>

    <delete id="deleteAlarm" parameterType="com.carryit.base.fam.bean.Alarm">
        delete from alarm where id=#{id}
    </delete>
</mapper>