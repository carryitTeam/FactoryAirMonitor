<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pirtc.flight.livewatch.performance.dao.config.IBaseUserSnapshotDao">
    <resultMap type="com.pirtc.flight.livewatch.performance.domain.UserSnapshotVo" id="UserSnapshot">
        <!-- column:库表的字段名 property:实体类里的属性名 -->
        <id column="id" property="id"/>
        <result column="userId" property="userId"/>
        <result column="reportId" property="reportId"/>
        <result column="dimSnapshot" property="dimSnapshot"/>
        <result column="legendSnapshot" property="legendSnapshot"/>
        <result column="DataChange_CreateTime" property="DataChange_CreateTime"/>
        <result column="DataChange_LastTime" property="DataChange_LastTime"/>
    </resultMap>

    <sql id="fields">
        select id, userId,reportId,dimSnapshot,legendSnapshot,datachange_lasttime,datachange_createtime
        from usersnapshot
    </sql>

    <insert id="add" parameterType="com.pirtc.flight.livewatch.performance.domain.UserSnapshotVo"
            useGeneratedKeys="true" keyProperty="id">
        insert into usersnapshot(userId,reportId,dimSnapshot,legendSnapshot)
        values(#{userId},#{reportId},#{dimSnapshot},#{legendSnapshot})
    </insert>

    <update id="update" parameterType="com.pirtc.flight.livewatch.performance.domain.UserSnapshotVo">
        update usersnapshot set dimSnapshot=#{dimSnapshot},legendSnapshot=#{legendSnapshot}
        where userId=#{userId} and reportId=#{reportId}
    </update>

    <select id="checkExist" parameterType="com.pirtc.flight.livewatch.performance.domain.UserSnapshotVo"
            resultType="java.lang.String">
        select userId from usersnapshot where  userId=#{userId} and reportId=#{reportId}
    </select>

    <select id="queryByUserAndReport" parameterType="com.pirtc.flight.livewatch.performance.domain.UserSnapshotVo"
            resultMap="UserSnapshot">
        <include refid="fields"/>
        where userId=#{userId} and reportId=#{reportId}
    </select>

    <delete id="delete" parameterType="com.pirtc.flight.livewatch.performance.domain.UserSnapshotVo">
        delete from usersnapshot where id=#{id}
    </delete>
</mapper>